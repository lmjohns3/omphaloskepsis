.snapshot
  .where
    aspect-ratio 16 / 9
    max-width 30em
    min-width 10em

  .rendered
    height 100%

    &:hover
      background-color hsla(0, 0%, 50%, 0.1)
    p
      margin-bottom 0

.mood
  background linear-gradient(90deg,
                             var(--coolwarm-m3),
                             var(--coolwarm-m2),
                             var(--coolwarm-m1),
                             var(--coolwarm-0),
                             var(--coolwarm-p1),
                             var(--coolwarm-p2),
                             var(--coolwarm-p3))
  cursor pointer
  height 0.5em
  margin 1em 0
  position relative

  .marker
    font-size 1.5em
    line-height 1
    margin-left -0.6em
    position absolute
    text-align center
    top -0.25em
    width 0.2em

.feels
  align-items center
  display flex
  flex-flow row
  justify-content space-evenly

  .dial .arc
    &.joy
      background hsla(50, 70%, 70%, 0.5)
    &.sadness
      background hsla(240, 70%, 70%, 0.5)
    &.anger
      background hsla(0, 70%, 70%, 0.5)
    &.fear
      background hsla(120, 70%, 70%, 0.5)
