#app > .snapshot
  display flex
  flex-flow column
  gap 0.5em

  & > *
    display flex
    flex-flow row
    gap 0.0.5em

    & > *:first-child
      width 2em

  .note .rendered
    height 100%

    &:hover
      background-color hsla(0, 0%, 50%, 0.1)

    & > p:first-child
      margin-top 0

    & > p:last-child
      margin-bottom 0

  .map
    .leaflet-container
      aspect-ratio 3
      min-height 6em
      width 100%

      .leaflet-control-attribution
        font-family 'Fira Sans Condensed', sans-serif
        font-size 0.5em
