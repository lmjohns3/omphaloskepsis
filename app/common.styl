:root
  font-family Inter, sans-serif
  font-size clamp(1rem, calc(1rem + ((1vw - 1.6px) * 1.1111)), 2rem)
  line-height 1.5

code, kbd, pre
  font-family 'Inconsolata', monospace

nav
  align-items center
  background hsl(0, 0%, 10%)
  color hsl(0, 0%, 90%)
  display flex
  gap 0.1em
  height 2.5em
  margin 0
  padding 0 0.2em
  position sticky
  text-align center
  top 0
  z-index 10

  & > *
    flex 0 0 auto

  & > .sep
    flex 1 1 auto

  a
    border-radius 0.1em
    height 2em
    line-height 2em
    text-decoration none
    width 2em

    &:hover
      background-color hsla(0, 0%, 50%, 0.3)

input[type='number']
  width 3em

input[type='range']
  width 8em

input[type='text']
  width 5em

textarea
  min-height 8em

button
  &.add
  &.delete
  &.remove
    font-weight bold
    height 1.5em
    line-height 1
    min-width 1.5em
    padding 0.1em 0.3em

  &.delete
  &.remove
    background hsl(0, 50%, 80%)
    color hsl(0, 80%, 40%)

.container
  display flex
  flex-flow column

  h2:first-child
    margin 0
    padding-left 3rem

  & > *
    padding 0.5em

    &:nth-child(odd)
      background hsl(0, 0%, 95%)

.flex-row
  display flex
  flex-flow row
  gap 0.5em

  & > .spacer
    width 2rem

.metric
  .value
    font-weight bold
    text-align right

    &.can-edit
      cursor pointer

  .unit
    &.options-2
    &.options-3
    &.options-4
    &.options-5
      cursor pointer

      &:after
        color hsl(300, 70%, 30%)
        content ' ‚ü≥ '
