*
  box-sizing border-box
  margin 0
  padding 0

:root
  font-family 'Fira Sans Condensed', sans-serif
  font-size clamp(1rem, calc(1rem + ((1vw - 1.6px) * 1.1111)), 2rem)
  line-height 1.5

body
  background #ffffff
  color #111111

code
  font-family 'Inconsolata', monospace

nav
  background hsl(120, 30%, 70%)
  height 2rem
  position sticky
  top 0
  z-index 100

  ul
    align-items center
    display flex
    padding-left 0

    li
      flex 0 0 auto
      list-style-type none
      margin-left 0.25rem

      &:first-child
        margin-left 0

      &.sep
        flex 1 1 auto

      a, .new
        background hsl(120, 30%, 75%)
        cursor pointer
        display block
        padding 0.25rem 0.75rem
        text-decoration none

        &:hover
          background hsl(120, 30%, 80%)

ol, ul
  padding-left 1rem

button.delete
  background hsl(0, 50%, 80%)
  border solid 1px hsl(0, 50%, 50%)
  border-radius 100%
  bottom 1rem
  cursor pointer
  padding 0.5rem
  position fixed
  right 1rem
  width 2.5rem

.leaflet-container
  width: 100%
  height: 15rem

.container
  margin 0.5rem

.when
  align-items center
  background hsl(240, 30%, 80%)
  display flex
  gap 0.5rem
  padding 0.5rem

  @media (max-width: 480px)
    .weekday
      display none
