*
  box-sizing border-box
  margin 0
  max-width 100%
  padding 0

:root
  font-family 'Fira Sans Condensed', sans-serif
  font-size clamp(1rem, calc(1rem + ((1vw - 1.6px) * 1.1111)), 2rem)
  line-height 1.5

body
  background hsl(0, 0%, 10%)
  color hsl(0, 0%, 90%)

a
  color hsl(210, 70%, 70%)

code
kbd
pre
  font-family 'Inconsolata', monospace

nav
  background hsl(30, 25%, 25%)
  top 0
  height 2.5em
  position sticky
  z-index 10

  ul
    align-items center
    display flex
    gap 0.1em
    height 100%
    padding 0 0.2em

    li
      flex 0 0 auto

      &.sep
        flex 1 1 auto

      a
        border-radius 1em
        display inline-block
        height 2em
        line-height 2em
        text-align center
        text-decoration none
        width 2em

        &.active
          background-color hsla(0, 0%, 0%, 0.5)
        &:hover
          background-color hsla(0, 0%, 50%, 0.3)

ol
ul
  list-style none
  padding-left 0

input
button
select
textarea
  background-color hsla(50, 50%, 93%, 0.1)
  border none
  border-radius 0.3em
  color inherit
  font-family 'Fira Sans Condensed', sans-serif
  font-size larger
  padding 0.1em 0.3em

input
  width 4em

textarea
  height 10em

button
  background hsl(210, 50%, 90%)
  color hsl(210, 50%, 40%)
  cursor pointer
  opacity 0.9
  text-align center

  &[disabled]
    background hsl(0, 10%, 90%)
    color hsl(0, 10%, 80%)

  &.add
  &.delete
  &.remove
    font-weight bold
    height 1.5em
    line-height 1
    min-width 1.5em
    padding 0

  &.delete
  &.remove
    background hsl(0, 50%, 80%)
    color hsl(0, 80%, 40%)

  &:hover
    opacity 1

.leaflet-container
  width 100%
  height 10rem

  .leaflet-control-attribution
    font-family 'Fira Sans Condensed', sans-serif
    font-size 0.5em

.container
  margin 0.5rem

.toggle
  -moz-user-select none
  -ms-user-select none
  -webkit-user-select none
  background-color hsla(150, 0%, 100%, 0.3)
  border solid 0.1rem #ccc
  border-radius 0.7rem
  cursor pointer
  display inline-block
  height 1.4rem
  margin 0 0.5rem
  position relative
  top 0.3rem
  transition background-color 0.2s ease-in
  width 2.5rem

  &:before
    background-color hsla(150, 100%, 90%, 0.3)
    border solid 0.1rem hsla(0, 0%, 50%, 0.1)
    border-radius 100%
    box-sizing border-box
    content ''
    display block
    height 1rem
    margin 0
    position absolute
    right 1.2rem
    top 0.1rem
    transition all 0.2s ease-in 0s
    width 1rem

  &.toggled
    background-color hsla(150, 80%, 40%, 0.7)
    border-color hsla(150, 80%, 40%, 0.7)

    &:before
      border-color hsla(150, 80%, 90%, 0.7)
      right 0.1rem

.meter
  display flex

  span
    flex 0 0 auto
  .label
    flex 1 0 3em
  .emoji
    flex 0 0 1.5em

  .value
    font-weight bold
    text-align right

    &.can-edit
      cursor pointer

  .unit
    margin-left 0.5em

    &.options-2
    &.options-3
    &.options-4
      cursor pointer

      &:before
        color hsl(300, 70%, 30%)
        content '‚ü≥ '

.dial
  align-items center
  display flex
  flex-flow column
  height 4.5rem
  justify-content flex-end
  margin-right 0.5rem
  position relative
  width 4.5rem

  .icon, .value
    font-size 1.5rem
    line-height 1
    z-index 3

  .value
    display none

