div.event

  h2
    color hsl(300, 30%, 50%)
    margin 1rem 0

  textarea
    font-size: 1rem
    min-height: 10rem
    width: calc(100% - 2rem)

  .rendered
    min-height: 80vh

    &:hover
      background: hsl(0, 0%, 90%)
    p
      margin-bottom: 0

.polarity
  cursor pointer
  height 1.5rem
  margin 0.5rem 0 1rem
  position relative

  .bar
    background linear-gradient(90deg,
                               var(--coolwarm-m3),
                               var(--coolwarm-m2),
                               var(--coolwarm-m1),
                               var(--coolwarm-0),
                               var(--coolwarm-p1),
                               var(--coolwarm-p2),
                               var(--coolwarm-p3))
    display block
    height 1rem
    left 1rem
    opacity 0.5
    position absolute
    bottom 0
    right 1rem
    z-index 1

  .marker
    bottom -1px
    font-size 1.5rem
    line-height 1
    position absolute
    width 2rem
    z-index 2

  .lo
    left 0
  .cur
    margin-left -1rem
    text-align center
  .hi
    right 0
    text-align right


.mood
  align-items center
  display flex
  flex-flow row
  justify-content space-evenly


.dial
  align-items center
  display flex
  flex-flow column
  height 4.5rem
  justify-content flex-end
  margin-right 0.5rem
  position relative
  width 4.5rem

  .icon, .value
    font-size 1.5rem
    line-height 1
    z-index 3

