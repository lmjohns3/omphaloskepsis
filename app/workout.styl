#app > .workout

  h3
    margin 0

  iframe
    aspect-ratio 16 / 9
    max-width 100%
    width 560px

  img
    max-width 6em
    max-height 6em

  .step-counter
  .path-tracker
  .heart-rate-monitor
  .timer
  .stopwatch
    display flex
    gap 0.5em

    &.disabled
      opacity 0.5
    &.enabled
      opacity 1

  .summary .value
    font-weight bold

  .active-set
    background hsl(60deg, 70%, 90%)
    border-bottom solid 2px hsl(0, 0%, 0%)

  .progress
    gap 0.2em
    .spacer
      width 2.3rem
    .current
      margin-top -0.13em
    .future
      color hsl(60deg, 30%, 70%)

  button.start
    margin-top 0.5em

#app > .new-workout

  h3
    margin 0

  button.remove
  button.update-all
    font-size 0.7em
    opacity 0.4

    &:hover
      opacity 1

  button.update-all
    margin-left 0.5em

  #num-repeats
    width 3em

  .other-workout
    h3
      margin-bottom 0.3em
      margin-top 1em

    .exercises
      opacity 0.5
      font-size smaller
