#app > .workout

  iframe
    aspect-ratio 16 / 9
    max-width 100%
    width 560px

  img
    max-width 6em
    max-height 6em

  .available
    margin-left 2em

  .step-counter
  .path-tracker
  .heart-rate-monitor
  .timer
  .stopwatch
    display flex
    gap 0.5em

    &.disabled
      opacity 0.5
    &.enabled
      opacity 1

  .summary
    .value
      font-weight bold

  .completed-set
    margin-top 0.5em

  .active-set
    background-color hsla(0, 0%, 50%, 0.1)
    padding 1em 0


#app > .new-workout

  button.remove
  button.update-all
    font-size 0.7em
    opacity 0.4

    &:hover
      opacity 1

  button.update-all
    margin-left 0.5em

  #num-repeats
    margin-left 0.5em
    width 3em

  .other-workout
    h3
      margin-bottom 0.3em
      margin-top 1em

    .exercises
      opacity 0.5
      font-size smaller
